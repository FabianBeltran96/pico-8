function _init()
	poke(0x5f2d,1)
	mana_init()
	building_init()
	store_init()
	
	clock= 0 
	secs = 0
 start_flag=false
end

function _update()
 mana_update()
 building_update()
 store_update()
 
 if(start_flag)then
		if(clock>=30)then
			secs+=1
			clock=0
		end
	end
	
	clock+=1
	
	if(mana>=100)then
		start_flag=false
	end	
end

function _draw()
	cls()
	map()
	print("segundos: "..secs)
	mana_draw()
	building_draw()
	store_draw()
	
--	print(stat(32).."/"..stat(33),stat(32),stat(33))
	circfill(stat(32),stat(33),1,6)
end


